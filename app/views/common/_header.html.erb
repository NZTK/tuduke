<header class= "navbar  navbar-inverse" style= "background-color: white">
    <nav class= "nav navbar-nav ">
      <%= link_to root_path do%>
      <%= image_tag "logo.jpg", size: "200x100"%>
      <% end %>
      <div class="navbar-form navbar-right ">
        <%= search_form_for @search, url: novels_path do |f| %>
        <%= f.text_field :novel_title_cont, placeholder: "タイトルを検索" %>
        <%= f.submit "検索" , class: "btn btn-default btn-xs" %>
      <% end %>
    </div>
    </nav>

    <% if user_signed_in? %>
    <ul class= "collapse navbar-collapse ">
      <ul class= "navbar-nav navbar-right" id="dropdwn">
        <li ><%= link_to "#{current_user.username}",user_path(current_user) %></li>
        <li><%= link_to ranking_novels_path, class: "fas fa-crown" do %>
          ランキング
          <% end %>
        </li>
        <li class="dropdwn_btn-1"><i class="fas fa-folder-open" >ジャンル</i>
           <ul class="dropdwn_menu 1st">
              <li><% @genres.each do |g| %>
                <table>
                  <%= link_to g.genre_name ,novels_path(genre_id: g.id) %>
                </table>
              <% end %>
            </li>
            </ul>
        </li>
        <li><%= link_to new_novel_path, class: "fas fa-plus" do %>
          新規投稿
          <% end %>
        </li>
        <li class="dropdwn_btn-2"><i class="fas fa-user">マイページ</i>
          <ul class="dropdwn_menu 2nd">
            <li><%= link_to like_user_path(current_user.id) , class: "fas fa-heart" do %>
                  Like
                <% end %>
            </li>
            <li><%= link_to history_user_path(current_user.id), class: "fas fa-history" do %>
                  閲覧履歴
                <% end %>
            </li>
            <li><%= link_to follow_user_path(current_user.id), class: "fas fa-users" do %>
                  Follow
                <% end %>
            </li>
            <li><%= link_to user_path(current_user.id), class: "fas fa-user" do %>
                  マイページ
                <% end %>
            </li>
          </ul>
        </li>
        <li><%= link_to destroy_user_session_path, class: "fas fa-sign-out-alt", method: :delete do %>
          ログアウト
          <% end %>
        </li>
      </ul>
    </ul>
    <% end %>
</header>
