<%= render "common/header" %>
<div class= "body">
	<%= render "common/alert" %>
	<div class= "container-fruid">
		<div class= "row">
			<div class= "col-lg-6 col-md-6  col-xs-10 col-lg-offset-0 col-md-offset-0 col-xs-offset-1 col-lg-push-3  col-md-push-3" >
				<%if @novels %>
					<% if params[:tag_name] %>
					  <%= "#{params[:tag_name]}の検索結果" %>:<%= "#{@tag.taggings_count}件" %>
					<% elsif params[:genre_id] %>
					  <%= "#{@genre.genre_name}の検索結果" %>:<%= "#{@genre.novel.count}件" %>
					<% end%>
					<% @novels.each do |novel| %>
						<%= render partial: "novel" ,locals: {f: novel} %>
					<% end %>
					<%= paginate @novels %>
				<% else %>

					<% @search_novels.each do |novel| %>
						<%= render partial: "novel" ,locals: {f: novel} %>
					<% end %>
					<%= paginate @search_novels %>
				<% end%>
			</div>
			<%= render partial: "index_side", locals: {novel_con: @novel_con, tags: @tags} %>
		</div>
	</div>
</div>
<%= render "common/footer" %>
