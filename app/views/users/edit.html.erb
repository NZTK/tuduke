<%= render "common/header" %>
<div class ="body" >
	<div class ="container">
		<div class ="row">
			<div class ="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3  col-xs-12">
				<div class= "form-header">
					<h2>登録情報編集</h2>
				</div>
				<div class= "form-body">
					<%=  form_for(@user) do |f|  %>
					<%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-group">
                      <div class="field">
                        <%= f.label :username, "ユーザーネーム" %><br />
                        <%= f.text_field :username, autofocus: true, class:"form-control " , id:"username", placeholder:"3~15文字" %>
                      </div>
                    </div>
                     <div class="form-group">
                      <div class="field">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, class:"form-control " , id:"email", placeholder:"メールアドレス" %>
                      </div>
                    </div>
                     <div class="form-group">
                      <div class="field user_about">
                        <%= f.label :user_about, "自己紹介" %><br />
                        <%= f.text_area :user_about, autofocus: true, class:"form-control " , id:"user_about", placeholder:"~300文字" %>
                      </div>
                    </div>
                    <div class="actions">
                        <%= f.submit "変更を保存" , class: "btn btn-block btn-warning "  %>
                    </div>
					<% end %>
					<div class= "actions destroy">
                    	<%= button_to "退会",registration_path(resource_name),data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-block btn-danger" %>
                    </div>
				</div>
			</div>
		</div>
	</div>
</div>