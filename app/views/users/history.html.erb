<%= render "common/header" %>
<div class= "show_head" >
	<h3><%= @user.username %>さんの閲覧履歴</h3>
	<h4>最大20件</h4>
</div>
<div class= "body">
	<div class= "container">
		<div class= "row">
		<% if @history.blank? %>
 		<div class= "box_head">
 			<h2>閲覧履歴はありません</h2>
 		</div>
 		<%  else %>
		<div class= "row">
			<div class= "col-lg-6 col-lg-offset-3 col-md-6 col-md-3 col-xs-10 col-xs-offset-1" >
				<% @history.each do |f| %>
					<div class= "novel-box">
						<h3><%= link_to f.novel_content.novel_content_title, novel_novel_content_path(f.novel_content.novel.id, f.novel_content.id) %></h3>
						作品名：<%= link_to f.novel_content.novel.novel_title ,novel_path(f.novel_content.novel.id) %><br>
						ホストユーザー：<%= link_to f.novel_content.novel.user.username, user_path(f.novel_content.novel.user.id) %><br>
						作成日：<%= f.novel_content.created_at.strftime('%Y/%m/%d') %>
						最終更新日：<%= f.novel_content.updated_at.strftime('%Y/%m/%d') %>
					</div>
				<% end %>
			</div>
		</div>
		<% end %>
		</div>
	</div>
</div>
<%= render "common/footer" %>