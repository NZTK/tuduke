<%= render "common/header" %>
<div class= "show_head" >
	<h3><%= @user.username %>さんのお気に入り一覧</h3>
</div>
<div class= "body">
	<div class= "container">
		<div class= "row">
			<% if @likes.blank? %>
	 		<div class= "box_head">
	 			<h2>お気に入り小説はありません</h2>
	 		</div>
 			<%= render partial: "users/mypage_link", locals: {user: @user} %>
 		</div>
 		<%  else %>
		<div class= "row">
			<div class= "col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1" >
				<div class= "ranking-box">
				<% @likes.each do |f| %>
					<%= render partial: "novels/novel_content", locals: {f: f} %>
				<% end %>
				</div>
				<%= paginate @likes %>
				<%= render partial: "users/mypage_link", locals: {user: @user} %>
			</div>
		</div>
		<% end %>
	</div>
</div>
<%= render "common/footer" %>