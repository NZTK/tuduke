<%= render "common/header" %>
<div class= "body">
	<div class= "show_head">
 			<h3><%= @user.username %>さんの投稿小説一覧</h3>
 		</div>
	<div class= "container-fluid">
 		<% if @novel_contents.blank? %>
 		<div class= "box_head">
 			<h2>投稿小説はありません</h2>
 		</div>
 		<%  else %>
		<div class= "row">
			<div class= "col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1" >
				<div class= "show_novels_box">
				<% @novel_contents.each do |f| %>
					<%= render partial: "novels/content" ,locals: {f: f} %>
				<% end %>
				</div>
				<%= paginate @novel_contents %>
			</div>
		</div>
		<% end %>
	</div>
</div>
<%= render "common/footer" %>