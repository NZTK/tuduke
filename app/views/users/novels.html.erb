<%= render "common/header" %>
<div class= "body">
	<div class= "show_head">
 			<h3><%= @user.username %>さんの投稿作品一覧</h3>
 		</div>
	<div class= "container-fluid">
 		<% if @novels.blank? %>
 		<div class= "box_head">
 			<h2>投稿作品はありません</h2>
 		</div>
 		<%  else %>
		<div class= "row">
			<div class= "col-lg-6 col-lg-offset-3 col-md-6 col-md-3 col-xs-10 col-xs-offset-1" >
				<div class= "show_novels_box">
				<% @novels.each do |f| %>
					<%= render partial: "novels/novel" ,locals: {f: f} %>
				<% end %>
				</div>
				<%= paginate @novels %>
			</div>
		</div>
		<% end %>
	</div>
</div>